{
	"author": "melusc",
	"dependencies": {
		"@babel/runtime": "^7.14.6",
		"dayjs": "^1.10.5",
		"dompurify": "^2.2.9",
		"file-saver": "^2.0.5",
		"htm": "^3.0.4",
		"immer": "^9.0.3",
		"jszip": "^3.6.0",
		"nanoid": "^3.1.23",
		"preact": "^10.5.13"
	},
	"description": "",
	"devDependencies": {
		"@babel/plugin-transform-react-jsx": "^7.14.5",
		"@babel/plugin-transform-runtime": "^7.14.5",
		"@sindresorhus/tsconfig": "^1.0.2",
		"@types/tampermonkey": "^4.0.0",
		"@typescript-eslint/parser": "^4.27.0",
		"babel-loader": "^8.2.2",
		"babel-plugin-replace-identifiers": "^0.1.1",
		"clean-webpack-plugin": "^3.0.0",
		"concurrently": "^6.2.0",
		"csso-loader": "^0.3.1",
		"eslint-config-xo-react": "^0.25.0",
		"gulp": "^4.0.2",
		"gulp-cached": "^1.1.1",
		"gulp-cli": "^2.3.0",
		"gulp-rename": "^2.0.0",
		"gulp-svgmin": "^3.0.0",
		"prettier": "^2.3.1",
		"sass": "^1.35.0",
		"sass-loader": "^12.1.0",
		"serve": "^12.0.0",
		"terser-webpack-plugin": "^5.1.3",
		"ts-loader": "^9.2.3",
		"type-fest": "^1.2.0",
		"typescript": "^4.3.2",
		"typescript-plugin-css-modules": "^3.4.0",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.2",
		"webpack-glob-entry": "^2.1.1",
		"xo": "^0.40.2"
	},
	"license": "MIT",
	"name": "moodle_userscript",
	"prettier": {
		"arrowParens": "avoid",
		"bracketSpacing": false,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true
	},
	"private": true,
	"scripts": {
		"build": "npm run lint && npm run webpack",
		"gulp": "gulp start",
		"lint": "prettier -w \"{*,**/*}.{ts,tsx,js,jsx,scss}\" \"!dist/**\" && xo --fix",
		"serve": "serve dist",
		"start": "concurrently npm:gulp npm:webpack:w -r -k",
		"test": "prettier -w \"{*,**/*}.{ts,tsx,js,jsx,scss}\" \"!dist/**\" && xo",
		"webpack": "webpack -c production.config.js --env PROD",
		"webpack:w": "webpack -c production.config.js -w"
	},
	"version": "1.0.0",
	"xo": {
		"env": [
			"es2021",
			"browser",
			"greasemonkey"
		],
		"extends": [
			"xo-react"
		],
		"globals": [
			"GM_addValueChangeListener",
			"GM_notification"
		],
		"overrides": [
			{
				"env": [
					"es2021",
					"node"
				],
				"files": [
					"./*.js"
				],
				"rules": {
					"unicorn/prefer-module": "off"
				}
			},
			{
				"files": [
					"**/*.{ts,tsx}"
				],
				"rules": {
					"no-unused-vars": "off"
				}
			}
		],
		"parser": "@typescript-eslint/parser",
		"rules": {
			"//": [
				"off",
				{
					"import/no-extraneous-dependencies": "Disabled because it wants me to install htm_preact since I import from htm/preact (https://github.com/benmosher/eslint-plugin-import/issues/2065)",
					"no-mixed-spaces-and-tabs": "https://prettier.io/docs/en/options.html#tabs",
					"react/prop-types": "Preact has no such thing"
				}
			],
			"import/extensions": "off",
			"import/no-extraneous-dependencies": "off",
			"max-depth": "off",
			"new-cap": [
				"error",
				{
					"capIsNewExceptionPattern": "^GM_"
				}
			],
			"no-await-in-loop": "off",
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			],
			"no-unused-vars": [
				"error",
				{
					"varsIgnorePattern": "^h$|^Fragment$"
				}
			],
			"node/file-extension-in-import": "off",
			"prefer-template": "error",
			"react/no-unknown-property": [
				"error",
				{
					"ignore": [
						"class",
						"stroke-linecap",
						"stroke-linejoin",
						"stroke-width"
					]
				}
			],
			"react/prop-types": "off"
		},
		"settings": {
			"react": {
				"pragma": "h",
				"pragmaFrag": "Fragment"
			}
		}
	}
}
