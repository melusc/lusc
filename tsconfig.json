{
	"compilerOptions": {
		"allowJs": true,
		"declaration": false,
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment",
		"lib": ["ES2020", "DOM.Iterable"],
		"module": "ES2020",
		"noImplicitAny": true,
		"outDir": "./dist/",
		"plugins": [
			{
				"name": "typescript-plugin-css-modules"
			}
		],
		"target": "ES2020",
		"types": ["preact", "tampermonkey"]
	},
	"extends": "@sindresorhus/tsconfig"
}
